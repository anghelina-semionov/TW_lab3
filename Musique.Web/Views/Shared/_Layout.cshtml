@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>LA MUSIQUE | @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Pour tout" name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    @Styles.Render("~/bundles/style/css")
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/pe-icon-7-stroke/css")
    @Styles.Render("~/bundles/materialdesignicons/css")


    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

</head>
<body>
    <header class="sticky">

        @Html.Partial("_Navigation")

    </header>

 
        @RenderBody()
   

    <footer class="bg-dark footer text-white">
        @Html.Partial("_Footer")
    </footer>

    <!-- javascript -->
    @Scripts.Render("~/bundles/jquery/js")
    @Scripts.Render("~/bundles/bootstrap/js")
    @Scripts.Render("~/bundles/bootstrapbundle/js")
    @Scripts.Render("~/bundles/jqueryeasing/js")
    @Scripts.Render("~/bundles/app/js")

</body>
</html>